  db_stypendia:
    image: mysql
    command: --default-authentication-plugin=mysql_native_password
    restart: always
    ports:
      - 3306:3306
    env_file:
      - ./.env
    environment:
      - MYSQL_ROOT_PASSWORD=adminer
      - MYSQL_DATABASE=adminer_stypendia
      - MYSQL_USER=a
      - MYSQL_PASSWORD=a
    volumes:
      - ./data:/data/mysql_typeorm_stypendia_dev

  adminer_stypendia:
    image: adminer
    restart: always
    env_file:
      - ./.env
    ports:
      - 8180:8080
    depends_on:
      - db_stypendia

  redis_stypendia:
    image: redis:alpine
    restart: always
    env_file:
      - ./.env
    ports:
      - 6380:6379

  mongo_logs:
    image: mongo
    restart: always
    env_file:
      - ./.env
    ports:
      - 25656:27017
    environment:
      - MONGO_INITDB_ROOT_USERNAME=kfcekwrjf
      - MONGO_INITDB_ROOT_PASSWORD=kjwklfe
      - MONGO_INITDB_DATABASE=dwqflk
      - MONGO_USERNAME=wefwefef
      - MONGO_PASSWORD=fwefewf
    volumes:
      - ./data:/data/mongo_logs_stypendia_dev
      - ./mongo-init.sh:/docker-entrypoint-initdb.d/mongo-init.sh:ro

  mongoweb_logs:
    image: mongo-express
    restart: always
    env_file:
      - ./.env
    environment:
      - ME_CONFIG_MONGODB_SERVER=mongo_logs
      - ME_CONFIG_MONGODB_ADMINUSERNAME=kfcekwrjf
      - ME_CONFIG_MONGODB_ADMINPASSWORD=kjwklfe
      - ME_CONFIG_BASICAUTH_USERNAME=wefewfwe
      - ME_CONFIG_BASICAUTH_PASSWORD=wefwefwef
    ports:
      - 8080:8081
    depends_on:
      - mongo_logs

